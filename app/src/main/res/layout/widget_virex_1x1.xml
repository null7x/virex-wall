<?xml version="1.0" encoding="utf-8"?>
<!-- 
    VIREX Widget 1x1 Layout
    Minimal single-button widget for random wallpaper
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="4dp" android:background="@drawable/widget_background">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:padding="8dp">

        <!-- Logo (clickable to open app) -->
        <TextView android:id="@+id/widget_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="V" android:textColor="#00D4FF" android:textSize="18sp" android:textStyle="bold" android:fontFamily="sans-serif-medium" />

        <!-- Random Wallpaper Button -->
        <ImageButton android:id="@+id/btn_random_wallpaper" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="4dp" android:src="@drawable/ic_widget_shuffle" android:background="@drawable/widget_button_background" android:scaleType="center" android:contentDescription="@string/widget_random_wallpaper" android:padding="8dp" />

    </LinearLayout>

</FrameLayout>
